{% extends 'base.html.twig' %}

{% block title %}Les cat√©gories{% endblock %}
{% block body %}
    {% for category in categories %}
        <h2>{{ category.title }}</h2>
        <hr>
        {% for article in category.articles %}
            <article>
                <a href="{{ path('articleDetail', {id: article.id}) }}">
                    <h3 class="post-title">
                        {{ article.title }}
                    </h3>
                </a>
                <p class="post-content-resume">
                    {{ article.content | truncate(100)}}
                </p>
                
                <p class="post-meta">Posted by
                    <a href="#">Start Bootstrap</a>
                    {{ article.createdAt | date("m/d/Y") }} - {{ article.category.title }}
                </p>
            </article>
        {% endfor %}
    {% endfor %}
{% endblock %}